public class DigitsInFactorial {

    public static int digitsInFactorial(int n) {
        if (n <= 1) return 1;

        double sum = 0;
        for (int i = 2; i <= n; i++) {
            sum += Math.log10(i);
        }
        return (int) sum + 1;
    }

    public static void main(String[] args) {
        System.out.println(digitsInFactorial(5));   // 3 (120)
        System.out.println(digitsInFactorial(100)); // 158
    }
}
