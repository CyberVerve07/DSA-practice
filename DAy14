import java.util.*;

public class LongestZeroSumSubarray {
    public static int maxLen(int arr[], int n) {
        HashMap<Integer, Integer> map = new HashMap<>();
        map.put(0, -1);  // Important: empty prefix sum case
        
        int prefixSum = 0;
        int maxLength = 0;
        
        for(int i = 0; i < n; i++) {
            prefixSum += arr[i];  // Current prefix sum
            
            if(map.containsKey(prefixSum)) {
                // Sum 0 subarray found!
                int length = i - map.get(prefixSum);
                maxLength = Math.max(maxLength, length);
            }
            
            // Store first occurrence of this prefix sum
            if(!map.containsKey(prefixSum)) {
                map.put(prefixSum, i);
            }
        }
        
        return maxLength;
    }
    
    public static void main(String[] args) {
        int[] arr = {15, -2, 2, -8, 1, 7, 10, 23};
        int n = arr.length;
        
        System.out.println("Max length: " + maxLen(arr, n));  // Output: 5
    }
}
